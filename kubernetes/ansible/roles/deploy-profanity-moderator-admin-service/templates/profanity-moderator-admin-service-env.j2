server.port={{ service_profanity_moderator_admin_port }}

spring.jpa.database-platform=org.hibernate.dialect.MySQL5InnoDBDialect
spring.jpa.hibernate.ddl-auto=update
spring.datasource.url=jdbc:mysql://{{ mysql_host }}:3306/profanityModeration?useSSL=false
spring.datasource.username={{ mysql_username }}
spring.datasource.password={{ mysql_password }}
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

spring.elastic.host={{ elasticsearch_host }}
spring.elastic.port={{ elasticsearch_http_port }}
spring.elastic.user={{ elasticsearch_username }}
spring.elastic.pass={{ elasticsearch_password }}
spring.elastic.transport=http

spring.kafka.consumer.key-deserializer=org.apache.kafka.common.serialization.StringDeserializer
spring.kafka.consumer.value-deserializer=org.springframework.kafka.support.serializer.JsonDeserializer
spring.kafka.producer.key-serializer=org.apache.kafka.common.serialization.StringSerializer
spring.kafka.producer.value-serializer=org.springframework.kafka.support.serializer.JsonSerializer
spring.kafka.bootstrapAddress={{ kafka_host }}:{{kafka_port }}
spring.kafka.groupId=1
spring.kafka.topicname.flagged=flagged
spring.kafka.topicname.moderated=moderated
spring.kafka.topicname.groupid=moderator

profanity.moderation.index=moderation_text_dev
profanity.classification.ai.offensive=Offensive
profanity.classification.offensive=NSFW
profanity.classification.not.offensive=SFW
profanity.classification.probabilityCutoff=0.85

