zuul.routes.login.path=/login/**
zuul.routes.login.stripPrefix=false
zuul.routes.login.url=http://{{ service_pm_user_service }}:{{ service_pm_user_port }}/

zuul.routes.ingest.path=/ingest/**
zuul.routes.ingest.stripPrefix=false
zuul.routes.ingest.url=http://{{ service_pm_ingestpipeline_service }}:{{ service_pm_ingestpipeline_port }}/

zuul.routes.analytics.path=/dashboard/analytics/**
zuul.routes.analytics.stripPrefix=false
